{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["dom"],
        "moduleResolution": "node",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule":true,
        "paths": {
            "@/*": ["./src/*"]
          }
    },
    "include": ["src/**/*.ts", "bot.ts"],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    },

}